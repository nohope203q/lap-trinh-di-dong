<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00b4db"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/avatar"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="5dp"
                app:civ_circle_background_color="#1AFFFFFF"
                android:elevation="6dp"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="Huỳnh Thiên Hạo"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3"/>

            <TextView
                android:id="@+id/tvinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="Cyber Security • K23 • HCMUTE"
                android:textColor="#E0E0E0"
                android:textSize="17sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#1AFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin liên hệ"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEmail"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Email"
                            android:textColor="#FFFFFF"
                            app:strokeColor="#FFFFFF"
                            app:icon="@android:drawable/ic_dialog_email"
                            app:iconTint="#FFFFFF"
                            app:cornerRadius="12dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGithub"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="GitHub"
                            android:textColor="#FFFFFF"
                            app:strokeColor="#FFFFFF"
                            app:iconTint="#FFFFFF"
                            app:cornerRadius="12dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFacebook"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Facebook"
                            android:textColor="#FFFFFF"
                            app:strokeColor="#FFFFFF"
                            app:iconTint="#FFFFFF"
                            app:cornerRadius="12dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCall"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Call Me"
                            android:textColor="#FFFFFF"
                            app:strokeColor="#FFFFFF"
                            app:icon="@android:drawable/ic_menu_call"
                            app:iconTint="#FFFFFF"
                            app:cornerRadius="12dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/etInput4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập các số, cách nhau bằng dấu phẩy"
                android:textColorHint="#B0C4DE"
                android:textColor="#FFFFFF"
                android:inputType="text"
                android:padding="12dp"
                android:backgroundTint="#FFFFFF"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProcess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="XỬ LÝ"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#03DAC5"
                app:cornerRadius="14dp"
                android:elevation="5dp"/>

            <EditText
                android:id="@+id/etInput5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập chuỗi ký tự"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0C4DE"
                android:inputType="text"
                android:backgroundTint="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnProcess5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XỬ LÝ"
                android:layout_marginTop="1dp"
                android:backgroundTint="#03DAC5"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:cornerRadius="14dp"
                android:elevation="5dp"/>

            <TextView
                android:id="@+id/tvOutput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kết quả sẽ hiển thị ở đây"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
